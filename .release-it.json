{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": {
        "file": ".github/workflows/docker-publish.yml",
        "type": "text/plain"
      }
    }
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "push": true
  }
}
